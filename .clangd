CompileFlags:
  Add:
    - "-Wno-unknown-warning-option"
  Remove:
    - "-W*"

Diagnostics:
  Suppress:
    - "*"
    - "!carving-fusion/*"
  ClangTidy:
    Add:
      - clang-diagnostic-*
      - clang-analyzer-*
      - bugprone-*
      - cert-*
      - cppcoreguidelines-*
      - google-*
      - misc-*
      - modernize-*
      - performance-*
      - readability-*
    Remove:
      # bugprone
      - bugprone-easily-swappable-parameters
      - bugprone-branch-clone
      - bugprone-macro-parentheses
      # cert
      - cert-err58-cpp
      # cppcoreguidelines
      - cppcoreguidelines-pro-type-vararg
      - cppcoreguidelines-pro-bounds-pointer-arithmetic
      - cppcoreguidelines-avoid-magic-numbers
      - cppcoreguidelines-pro-type-reinterpret-cast
      - cppcoreguidelines-pro-type-union-access
      - cppcoreguidelines-owning-memory
      - cppcoreguidelines-avoid-non-const-global-variables
      - cppcoreguidelines-macro-usage
      - cppcoreguidelines-avoid-do-while
      - cppcoreguidelines-init-variables
      - cppcoreguidelines-special-member-functions
      - cppcoreguidelines-pro-type-member-init
      - cppcoreguidelines-macro-to-enum
      - cppcoreguidelines-rvalue-reference-param-not-moved
      - cppcoreguidelines-missing-std-forward
      - cppcoreguidelines-avoid-c-arrays
      - cppcoreguidelines-pro-type-const-cast
      # google
      - google-readability-todo
      - google-readability-braces-around-statements
      - google-default-arguments
      - google-explicit-constructor
      # misc
      - misc-non-private-member-variables-in-classes
      - misc-include-cleaner
      - misc-use-internal-linkage
      - misc-use-anonymous-namespace
      # modernize
      - modernize-use-trailing-return-type
      - modernize-avoid-c-arrays
      - modernize-use-nodiscard
      - modernize-concat-nested-namespaces
      - modernize-use-using
      - modernize-use-auto
      - modernize-return-braced-init-list
      - modernize-use-transparent-functors
      - modernize-make-unique
      - modernize-make-shared
      - modernize-raw-string-literal
      - modernize-macro-to-enum
      # performance
      - performance-enum-size
      # readability
      - readability-magic-numbers
      - readability-identifier-length
      - readability-function-cognitive-complexity
      - readability-identifier-naming
      - readability-convert-member-functions-to-static
      - readability-braces-around-statements
      - readability-math-missing-parentheses
      - readability-function-size
      - readability-named-parameter
      - readability-make-member-function-const
      - readability-simplify-boolean-expr
      - readability-redundant-member-init
      - readability-redundant-declaration
      - readability-inconsistent-declaration-parameter-name
      - readability-avoid-const-params-in-decls
    CheckOptions:
      readability-implicit-bool-conversion.AllowPointerConditions: true
      readability-implicit-bool-conversion.AllowIntegerConditions: true
      readability-function-size.LineThreshold: 350
      readability-function-size.StatementThreshold: 300
      readability-function-size.BranchThreshold: 30
      readability-function-size.ParameterThreshold: 8
  UnusedIncludes: Strict

InlayHints:
  Enabled: false
